<!DOCTYPE html>
<html lang='en'>

<head>
  <% include ./partials/_head %>
</head>

<body>
  <% include ./partials/_header %>

  <div class='container'>
    <% if(!user) { %>
      <div class='text-center' style='padding: 10px'>
        <h2>Login</h2>
      </div>
      <form class='form-horizontal' action='/login?_method=PUT' method='POST'>
        <div class='form-group'>
          <label class='control-label col-sm-4' for='email'>Email:</label>
          <div class='col-sm-4'>
            <input class='form-control' id='email' type='email' name='email' placeholder='Enter email'>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-4' for='pwd'>Password:</label>
          <div class='col-sm-4'>
            <input class='form-control' id='pwd' type='password' name='password' placeholder='password'>
          </div>
        </div>
        <div class='form-group text-center'>
          <input class='btn btn-primary' type='submit' value='Login' style='width: 80px'>
        </div>
      </form>
      <% if(failed) { %>
        <div class='container text-center' style='padding-top: 20px'>
          <div class='alert alert-danger'>
            <h5> Incorrect username or password, please try again.</h5>
          </div>
        </div>
      <% } %>
    <% } else { %>
     <h2>Logout</h2>
      <form class='form-horizontal' action='/logout?_method=PUT' method='POST'>
        <div class='form-group'>
          <input class='btn btn-primary' type='submit' value='Logout'>
        </div>
      </form>
    <% } %>
  </div>

  <% include ./partials/_footer %>
</body>

</html>