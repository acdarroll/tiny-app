<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_head %>
</head>

<body>
  <% include ./partials/_header %>
  <h2 class='text-center'>Your Shortened URLs:</h2>
  <% if(user) {
    urls.forEach( function(url) { %>
    <div class='container text-center'>
      <div class='row'>
        <ul class='list-group'>
          <li class='list-group-item'>
            <div class='d-inline'>
              <a><%= url.shortUrl %> --> <%= url.longUrl %></a>
            </div>
            <div class='d-inline'>
              <a href='/urls/<%= url.shortUrl %>'>Edit</a>
            </div>
            <form class='form-inline' action='/urls/<%= url.shortUrl %>/delete?_method=DELETE' method='POST' value="Delete">
              <div class='form-group'>
                <input class='btn btn-danger' type='submit' value='Delete'>
              </div>
            </form>
          </li>
        </ul>
      </div>
    </div>
  <% });
  } else { %>
    <div class='container'>
      <div class='alert alert-info text-center'>
        <h2><strong>Please Login!</strong></h2>
      </div>
    </div>
  <% } %>
    <div class='container text-center'>
      <a href='/urls/new' class='text-center'>Create a New Short Link</a>
    </div>
</body>

</html>
