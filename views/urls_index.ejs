<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_head %>
  <style type="text/css">
    li div {
      display: inline-block;
      padding-left: 10px;
      padding-right: 10px;
      margin: 0px;
    }
  </style>
</head>

<body>
  <% include ./partials/_header %>

  <div class='container text-center'>
    <h2 class='text-center'>Your Shortened URLs:</h2>
      <ul class='list-group'>
      <% if(user) {
        urls.forEach( function(url) { %>
          <li class='list-group-item'>
            <div>
              <h4><a href='/u/<%= url.shortUrl %>'><%= url.shortUrl %></a></h4>
            </div><div>
              <h4>&rarr;</h4>
            </div><div>
              <h4><%= url.longUrl %></h4>
            </div><div>
              <a href='/urls/<%= url.shortUrl %>'><h4>Edit</h4></a>
            </div><div>
              <form action='/urls/<%= url.shortUrl %>/delete?_method=DELETE' method='POST' value="Delete">
                <input class='btn btn-danger' type='submit' value='Delete'>
              </form>
            </div>
          </li>
        <% }); %>
      </ul>
  </div>
  <% } else { %>
    <div class='container text-center' style='padding-top: 20px'>
      <div class='alert alert-info'>
        <h5>Please Login to View URLs!</h5>
      </div>
    </div>
  <% } %>
  <div class='container text-center'>
    <h4><a href='/urls/new' class='text-center'>Create a New Short Link</a></h4>
  </div>

  <% include ./partials/_footer %>
</body>

</html>
