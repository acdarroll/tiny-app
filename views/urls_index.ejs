<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_head %>
</head>

<body>
  <% include ./partials/_header %>
  <h2 class='text-center'>Your Shortened URLs:</h2>
  <% if(user) {
    urls.forEach( function(url) { %>
    <div class='container text-center'>
      <div class='row'>
        <ul class='list-group'>
          <li class='list-group-item'>
            <div>
              <form action='/urls/<%= url.shortUrl %>/delete?_method=DELETE' method='POST' value="Delete">
                <p><%= url.shortUrl %> --> <%= url.longUrl %></p>
            </div>
            <div>
                <a href='/urls/<%= url.shortUrl %>'>Edit</a>
                <input class='btn btn-danger' type='submit' value='Delete'>
              </form>
            </div>
          </li>
        </ul>
      </div>
    </div>
  <% });
  } else { %>
    <div class='container text-center'>
      <h2>Please Login!</h2>
    </div>
  <% } %>
  <div class='container text-center'>
    <a href='/urls/new' class='text-center'>Shorten a URL</a>
  </div>
</body>

</html>
