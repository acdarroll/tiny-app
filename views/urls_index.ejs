<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_head %>
</head>

<body>
  <% include ./partials/_header %>
  <div>
    <h2>Shortened URLs</h2>
      <% for(var path in urls) { %>
        <form action='/urls/<%= path %>/delete?_method=DELETE' method='POST' value="DELETE">
          <input type='submit' value='Delete'>
          <a><%= path %> --> <%= urls[path] %></a>
        </form>
      <% }; %>
    <a href='/urls/new'><p>Shorten URL</p></a>
  </div>
</body>

</html>
