<body>
  <% include ./partials/_header %>
  <div>
    <h2>Shortened URLs</h2>
      <% if(user) {
        urls.forEach( function(url) {
          console.log(urls) %>
        <form action='/urls/<%= url.shortUrl %>/delete?_method=DELETE' method='POST' value="Delete">
          <div id='form'>
            <a><%= url.shortUrl %> --> <%= url.longUrl %></a>
            <a href='/urls/<%= url.shortUrl %>'>Edit</a>
            <input type='submit' value='Delete'>
          </div>
        </form>
      <% });
      } else { %>
        <h2>Please Login!</h2>
      <% } %>
    <a href='/urls/new'><p>Shorten URL</p></a>
  </div>
</body>

